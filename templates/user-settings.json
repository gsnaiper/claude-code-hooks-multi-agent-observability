{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.claude/hooks/send_event.py --auto-project-id --event-type PreToolUse --server-url http://localhost:4000/events",
            "timeout": 10
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.claude/hooks/send_event.py --auto-project-id --event-type PostToolUse --server-url http://localhost:4000/events",
            "timeout": 10
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.claude/hooks/send_event.py --auto-project-id --event-type Notification --server-url http://localhost:4000/events",
            "timeout": 10
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.claude/hooks/send_event.py --auto-project-id --event-type Stop --server-url http://localhost:4000/events --add-chat",
            "timeout": 30
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.claude/hooks/send_event.py --auto-project-id --event-type SubagentStop --server-url http://localhost:4000/events",
            "timeout": 10
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.claude/hooks/send_event.py --auto-project-id --event-type SessionStart --server-url http://localhost:4000/events",
            "timeout": 10
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.claude/hooks/send_event.py --auto-project-id --event-type SessionEnd --server-url http://localhost:4000/events --add-chat",
            "timeout": 30
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.claude/hooks/send_event.py --auto-project-id --event-type UserPromptSubmit --server-url http://localhost:4000/events",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
